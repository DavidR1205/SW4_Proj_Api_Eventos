<%- include('../../partials/home/header') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Registrar Usuario</h4>
                </div>
                <div class="card-body">
                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg || error.message %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                    <form action="/registrar" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="primer_nombre">Primer Nombre</label>
                                <input type="text" class="form-control" id="primer_nombre" name="primer_nombre" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="segundo_nombre">Segundo Nombre</label>
                                <input type="text" class="form-control" id="segundo_nombre" name="segundo_nombre">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="primer_apellido">Primer Apellido</label>
                                <input type="text" class="form-control" id="primer_apellido" name="primer_apellido" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="segundo_apellido">Segundo Apellido</label>
                                <input type="text" class="form-control" id="segundo_apellido" name="segundo_apellido">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="tipo_documento_usuario">Tipo Documento</label>
                                <input type="text" class="form-control" id="tipo_documento_usuario" name="tipo_documento_usuario" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="numero_documento_usuario">Número Documento</label>
                                <input type="number" class="form-control" id="numero_documento_usuario" name="numero_documento_usuario" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="fecha_nacimiento">Fecha Nacimiento</label>
                                <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="celular_usuario">Celular</label>
                                <input type="text" class="form-control" id="celular_usuario" name="celular_usuario">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="direccion_usuario">Dirección</label>
                                <input type="text" class="form-control" id="direccion_usuario" name="direccion_usuario">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="edad_usuario">Edad</label>
                                <input type="number" class="form-control" id="edad_usuario" name="edad_usuario">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="correo_electronico">Correo Electrónico</label>
                                <input type="email" class="form-control" id="correo_electronico" name="correo_electronico" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="contrasena">Contraseña</label>
                                <input type="password" class="form-control" id="contrasena" name="contrasena" required minlength="6">
                            </div>
                        </div>
                        <input type="hidden" id="id_rol" name="id_rol" value="2">
                        <div class="form-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Registrar</button>
                            <a href="/" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/home/footer') %>