<%- include('../../partials/home/header') %>

    <div id="carouselExampleIndicators" class="carousel slide custom-carousel" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://images.unsplash.com/photo-1521737604893-d14cc237f11d?auto=format&fit=crop&w=1200&q=80"
                    class="d-block w-100" alt="Evento animado" />
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1551836022-d5d88e9218df?auto=format&fit=crop&w=1200&q=80"
                    class="d-block w-100" alt="Evento corporativo" />
            </div>
            <div class="carousel-item">
                <img src="https://images.unsplash.com/photo-1518893494013-481c1d8ed3fd?auto=format&fit=crop&w=1200&q=80"
                    class="d-block w-100" alt="Boda o celebraciÃ³n" />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>

    <div class="card-body">
        <% if (eventos && eventos.length> 0) {%>
            <div>
                <table>
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Lugar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% eventos.forEach(evento=> { %>
                            <tr>
                                <th>
                                <td>
                                    <%= evento.nombre_evento %>
                                </td>
                                <td>
                                    <%= evento.lugar_evento %>
                                </td>
                                </th>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <p>No hay eventos disponibles.</p>
                <% } %>
    </div>

    <%- include('../../partials/home/footer') %>