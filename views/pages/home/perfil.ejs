<%- include('../../partials/home/header') %>  

<%
function formatFecha(fecha) {
    try {
        const d = new Date(fecha);
        if (isNaN(d)) return '';
        return d.toISOString().split('T')[0];
    } catch (e) {
        return '';
    }
}
%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">Mi Perfil</h4>
                </div>
                <div class="card-body">

                    <% if (typeof success !== 'undefined') { %>
                        <div class="alert alert-success">
                            <%= success %>
                        </div>
                    <% } %>

                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(e => { %>
                                    <li><%= e.msg || e.message %></li>
                                <% }) %>
                            </ul>
                        </div>
                    <% } %>

                    <form action="/perfil" method="POST">
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="primer_nombre">Primer Nombre</label>
                                <input type="text" class="form-control" id="primer_nombre" name="primer_nombre" value="<%= usuario.primer_nombre %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="segundo_nombre">Segundo Nombre</label>
                                <input type="text" class="form-control" id="segundo_nombre" name="segundo_nombre" value="<%= usuario.segundo_nombre %>">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="primer_apellido">Primer Apellido</label>
                                <input type="text" class="form-control" id="primer_apellido" name="primer_apellido" value="<%= usuario.primer_apellido %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="segundo_apellido">Segundo Apellido</label>
                                <input type="text" class="form-control" id="segundo_apellido" name="segundo_apellido" value="<%= usuario.segundo_apellido %>">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="tipo_documento_usuario">Tipo Documento</label>
                                <input type="text" class="form-control" id="tipo_documento_usuario" name="tipo_documento_usuario" value="<%= usuario.tipo_documento_usuario %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="numero_documento_usuario">Número Documento</label>
                                <input type="number" class="form-control" id="numero_documento_usuario" name="numero_documento_usuario" value="<%= usuario.numero_documento_usuario %>" required>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="fecha_nacimiento">Fecha Nacimiento</label>
                                <input type="date" class="form-control" id="fecha_nacimiento" name="fecha_nacimiento" value="<%= formatFecha(usuario.fecha_nacimiento) %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="celular_usuario">Celular</label>
                                <input type="text" class="form-control" id="celular_usuario" name="celular_usuario" value="<%= usuario.celular_usuario %>">
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="direccion_usuario">Dirección</label>
                                <input type="text" class="form-control" id="direccion_usuario" name="direccion_usuario" value="<%= usuario.direccion_usuario %>">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="edad_usuario">Edad</label>
                                <input type="number" class="form-control" id="edad_usuario" name="edad_usuario" value="<%= usuario.edad_usuario %>">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="correo_electronico">Correo Electrónico</label>
                            <input type="email" class="form-control" id="correo_electronico" name="correo_electronico" value="<%= usuario.correo_electronico %>" required>
                        </div>

                        <div class="form-group d-flex justify-content-between my-5">
                            <a href="/" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/home/footer') %>
