<%- include('../../../partials/admin/header') %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><%= isEditing ? 'Editar' : 'Registrar' %> Compra</h4>
                </div>
                <div class="card-body">
                    <% if (errors && errors.length > 0) { %>
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                <% errors.forEach(error => { %>
                                    <li><%= error.msg || error.message %></li>
                                <% }); %>
                            </ul>
                        </div>
                    <% } %>
                    <form action="<%= isEditing ? `/admin/compras/${compra.id_compra}?_method=PUT` : '/admin/compras' %>" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="cantidad_boletas">Cantidad de Boletas</label>
                                <input type="number" class="form-control" id="cantidad_boletas" name="cantidad_boletas" value="<%= compra.cantidad_boletas || '' %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="valor_entrada">Valor Entrada</label>
                                <input type="number" class="form-control" id="valor_entrada" name="valor_entrada" value="<%= compra.valor_entrada || '' %>" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="valor_servicio">Valor Servicio</label>
                                <input type="number" class="form-control" id="valor_servicio" name="valor_servicio" value="<%= compra.valor_servicio || '' %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="valor_pago">Valor Pago</label>
                                <input type="number" class="form-control" id="valor_pago" name="valor_pago" value="<%= compra.valor_pago || '' %>" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="id_usuario">ID Usuario</label>
                                <input type="number" class="form-control" id="id_usuario" name="id_usuario" value="<%= compra.id_usuario || '' %>" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="id_boleta">ID Boleta</label>
                                <input type="number" class="form-control" id="id_boleta" name="id_boleta" value="<%= compra.id_boleta || '' %>" required>
                            </div>
                        </div>
                        <div class="form-group d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary"><%= isEditing ? 'Actualizar' : 'Guardar' %></button>
                            <a href="/admin/compras" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../../partials/admin/footer', { title }) %>