<%- include('../../../partials/admin/header') %>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="ml-4"><%= title %></h2>
        <a href="/admin/organizador/create" class="btn btn-success mx-3">Nuevo Organizador</a>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <% if (organizadores && organizadores.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Tipo Documento</th>
                                <th>Número Documento</th>
                                <th>Dirección</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% organizadores.forEach(organizador => { %>
                                <tr>
                                    <th><%= organizador.id_organizador %></th>
                                    <td><%= organizador.nombre_organizador %></td>
                                    <td><%= organizador.tipo_documento %></td>
                                    <td><%= organizador.numero_documento %></td>
                                    <td><%= organizador.direccion %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/organizador/<%= organizador.id_organizador %>/edit" class="btn btn-warning btn-sm mx-1"><i class="fas fa-edit"></i></a>
                                            <form action="/admin/organizador/<%= organizador.id_organizador %>?_method=DELETE" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm mx-0"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No hay organizadores registrados.</p>
            <% } %>
        </div>
    </div>
</div>
<%- include('../../../partials/admin/footer', { title }) %>