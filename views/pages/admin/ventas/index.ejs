<%- include('../../../partials/admin/header') %>
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="ml-4"><%= title %></h2>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <% if (ventas && ventas.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>ID</th>
                                <th>Valor Venta</th>
                                <th>Fecha Venta</th>
                                <th>MÃ©todo de Pago</th>
                                <th>ID Compra</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% ventas.forEach(venta => { %>
                                <tr>
                                    <th><%= venta.id_venta %></th>
                                    <td><%= venta.valor_venta %></td>
                                    <td><%= new Date(venta.fecha_venta).toLocaleDateString('es-ES') %></td>
                                    <td><%= venta.metodo_pago %></td>
                                    <td><%= venta.id_compra %></td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="/admin/ventas/<%= venta.id_venta %>/edit" class="btn btn-warning btn-sm mx-1"><i class="fas fa-edit"></i></a>
                                            <form action="/admin/ventas/<%= venta.id_venta %>?_method=DELETE" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm mx-0"><i class="fas fa-trash"></i></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p>No hay ventas registradas.</p>
            <% } %>
        </div>
    </div>
</div>
<%- include('../../../partials/admin/footer', { title }) %>